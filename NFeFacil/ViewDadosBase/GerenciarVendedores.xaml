<Page x:Class="NFeFacil.ViewDadosBase.GerenciarVendedores"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:view="using:NFeFacil.View"
      xmlns:controles="using:BaseGeral.Controles"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <GridView ItemsSource="{x:Bind Vendedores}"
              Margin="16">
        <GridView.ItemTemplate>
            <DataTemplate x:DataType="view:ConjuntoBasicoExibicao">
                <controles:ExibicaoImagem Imagem="{x:Bind Imagem}"
                                          Principal="{x:Bind Principal}"
                                          Secundario="{x:Bind Secundario}">
                    <controles:ExibicaoImagem.ContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Click="EditarVendedor">Editar</MenuFlyoutItem>
                            <MenuFlyoutItem Click="InativarVendedor">Inativar</MenuFlyoutItem>
                            <MenuFlyoutItem Click="ImagemVendedor">Imagem do perfil</MenuFlyoutItem>
                        </MenuFlyout>
                    </controles:ExibicaoImagem.ContextFlyout>
                </controles:ExibicaoImagem>
            </DataTemplate>
        </GridView.ItemTemplate>
    </GridView>
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid Height="48">
                    <TextBox Margin="8,0"
                             PlaceholderText="Buscar"
                             TextChanged="Buscar"
                             VerticalAlignment="Center"
                             MinWidth="256" />
                </Grid>
            </CommandBar.Content>
            <AppBarButton Icon="Add"
                          Label="Adicionar"
                          Click="AdicionarVendedor" />
        </CommandBar>
    </Page.BottomAppBar>
</Page>
