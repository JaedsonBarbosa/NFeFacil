<UserControl x:Class="NFeFacil.DANFE.PartesDANFE.CampoISSQN"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary Source="EstilosPadrao.xaml" />
    </UserControl.Resources>
    <StackPanel Margin="{Binding Source={StaticResource dimensoes}, Path=MargemBloco}">
        <TextBlock Style="{StaticResource DescritivoBloco}">CÁLCULO DO ISSQN</TextBlock>
        <Grid BorderThickness="1"
              BorderBrush="Black"
              CornerRadius="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="{Binding Source={StaticResource dimensoes}, Path=AlturaLinhaPadrao}" />
            </Grid.RowDefinitions>
            <StackPanel Padding="{StaticResource PaddingPadrao}"
                        BorderThickness="0,0,1,0"
                        BorderBrush="Black">
                <TextBlock Style="{StaticResource Cabecalho}">INSCRIÇÃO MUNICIPAL</TextBlock>
                <TextBlock Style="{StaticResource Conteudo}"
                           Text="{Binding IM}" />
            </StackPanel>
            <StackPanel Padding="{StaticResource PaddingPadrao}"
                        Grid.Column="1">
                <TextBlock Style="{StaticResource Cabecalho}">VALOR TOTAL DOS SERVIÇOS</TextBlock>
                <TextBlock Style="{StaticResource Conteudo}"
                           Text="{Binding TotalServiços}" />
            </StackPanel>
            <StackPanel Padding="{StaticResource PaddingPadrao}"
                        Grid.Column="2"
                        BorderThickness="1,0,1,0"
                        BorderBrush="Black">
                <TextBlock Style="{StaticResource Cabecalho}">BASE DE CÁLCULO DO ISSQN</TextBlock>
                <TextBlock Style="{StaticResource Conteudo}"
                           Text="{Binding BC}" />
            </StackPanel>
            <StackPanel Padding="{StaticResource PaddingPadrao}"
                        Grid.Column="3">
                <TextBlock Style="{StaticResource Cabecalho}">VALOR DO ISSQN</TextBlock>
                <TextBlock Style="{StaticResource Conteudo}"
                           Text="{Binding ValorISSQN}" />
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
