<ContentDialog x:Class="NFeFacil.Fiscal.ViewNFCe.DimensoesDANFE"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               Title="Dimensões"
               PrimaryButtonText="Concluir"
               SecondaryButtonText="Cancelar">
    <StackPanel>
        <Slider Header="Largura (mm)"
                Minimum="80"
                Maximum="210"
                Value="{x:Bind Largura, Mode=TwoWay}" />
        <Slider Header="Margem interna (mm)"
                Minimum="3"
                Maximum="10"
                Value="{x:Bind Margem, Mode=TwoWay}" />
    </StackPanel>
</ContentDialog>
