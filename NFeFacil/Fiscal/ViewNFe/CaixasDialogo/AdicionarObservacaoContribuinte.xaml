<ContentDialog x:Class="NFeFacil.Fiscal.ViewNFe.CaixasDialogo.AdicionarObservacaoContribuinte"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               Title="Adicionar obs. contribuinte"
               PrimaryButtonText="Adicionar"
               SecondaryButtonText="Cancelar">
    <StackPanel>
        <TextBox Header="Identificação"
                 Text="{x:Bind Contexto.XCampo, Mode=TwoWay}" />
        <TextBox Header="Conteúdo"
                 Text="{x:Bind Contexto.XTexto, Mode=TwoWay}" />
    </StackPanel>
</ContentDialog>
