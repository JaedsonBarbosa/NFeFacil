<ContentDialog x:Class="NFeFacil.Fiscal.ViewNFe.CaixasDialogo.AdicionarReferenciaEletronica"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:controles="using:NFeFacil.Controles"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               Title="Adicionar referência"
               PrimaryButtonText="Adicionar"
               SecondaryButtonText="Cancelar">
    <controles:EntradaRestrita Header="Chave de acesso de uma NF-e ou NFC-e"
                               Pattern="[^\d]"
                               Text="{x:Bind Chave, Mode=TwoWay}" />
</ContentDialog>
