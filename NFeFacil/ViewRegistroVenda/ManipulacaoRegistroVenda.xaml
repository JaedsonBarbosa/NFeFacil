<Page x:Class="NFeFacil.ViewRegistroVenda.ManipulacaoRegistroVenda"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          Margin="16">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.Setters>
                        <Setter Target="grpGeral.(Grid.ColumnSpan)"
                                Value="1" />
                        <Setter Target="grpGeral.(Grid.RowSpan)"
                                Value="2" />
                        <Setter Target="lstProdutos.(Grid.ColumnSpan)"
                                Value="1" />
                        <Setter Target="lstProdutos.(Grid.RowSpan)"
                                Value="2" />
                        <Setter Target="lstProdutos.(Grid.Column)"
                                Value="1" />
                        <Setter Target="lstProdutos.Margin"
                                Value="4,0,0,0" />
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="680" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid x:Name="grpGeral"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ComboBox Header="Cliente"
                      ItemsSource="{x:Bind Clientes}"
                      DisplayMemberPath="Nome"
                      SelectedValue="{x:Bind Cliente, Mode=TwoWay}"
                      SelectedValuePath="Id"
                      HorizontalAlignment="Stretch" />
            <ComboBox Grid.Column="1"
                      Header="Motorista"
                      ItemsSource="{x:Bind Motoristas}"
                      DisplayMemberPath="Nome"
                      SelectedValue="{x:Bind Motorista, Mode=TwoWay}"
                      SelectedValuePath="Id"
                      HorizontalAlignment="Stretch" />
            <ItemsControl Grid.Row="1"
                          Grid.ColumnSpan="2"
                          Style="{StaticResource ItensResponsivos}">
                <DatePicker Header="Data da venda"
                            MinWidth="156"
                            MonthFormat="{}{month.integer} {month.abbreviated}"
                            Date="{x:Bind DataHoraVenda, Mode=TwoWay}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button VerticalAlignment="Stretch"
                            Margin="0,2,2,0"
                            Click="AplicarDesconto">
                        <TextBlock TextAlignment="Center">
                        <Run>Aplicar</Run>
                        <LineBreak />
                        <Run>desconto</Run></TextBlock>
                    </Button>
                    <TextBox Grid.Column="1"
                             Header="Desconto"
                             IsReadOnly="True"
                             x:Name="txtDescontoTotal" />
                </Grid>
                <TextBox MaxLength="12"
                         IsReadOnly="True"
                         x:Name="txtTotal"
                         Header="Total" />
            </ItemsControl>
        </Grid>
        <ListView x:Name="lstProdutos"
                  ItemsSource="{x:Bind ListaProdutos}"
                  Grid.Row="1"
                  Grid.ColumnSpan="2"
                  ItemContainerStyle="{StaticResource ItemFullWidth}">
            <ListView.Header>
                <Grid Style="{StaticResource Cabecalho}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Style="{StaticResource SubtitleTextBlockStyle}"
                               Text="Nome"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center" />
                    <TextBlock Grid.Column="1"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Text="Quantidade"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center" />
                    <TextBlock Grid.Column="2"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Text="Total"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center" />
                    <Button Grid.Column="3"
                            Style="{StaticResource BotaoAdd}"
                            Click="AdicionarProduto">
                        <SymbolIcon Symbol="Add" />
                    </Button>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Click="RemoverProduto">Remover</MenuFlyoutItem>
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Descricao}" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Quantidade}" />
                        <TextBlock Grid.Column="2"
                                   Text="{Binding TotalLíquido}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ScrollViewer Grid.Row="2"
                      Grid.ColumnSpan="2"
                      MaxHeight="80">
            <TextBox Header="Observações"
                     TextWrapping="Wrap"
                     Text="{x:Bind Observacoes, Mode=TwoWay}" />
        </ScrollViewer>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Label="Finalizar e registrar"
                          Icon="Accept"
                          Click="Finalizar" />
        </CommandBar>
    </Page.BottomAppBar>
</Page>
