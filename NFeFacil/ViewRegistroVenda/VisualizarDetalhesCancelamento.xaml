<ContentDialog x:Class="NFeFacil.ViewRegistroVenda.VisualizarDetalhesCancelamento"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               Title="Detalhes do cancelamento"
               PrimaryButtonText="OK"
               SecondaryButtonText="Fechar">

    <RichTextBlock>
        <Paragraph>
            <Run FontWeight="Bold">Data e hora:</Run>
            <Run Text="{x:Bind DataEHora}" />
        </Paragraph>
        <Paragraph>
            <Run FontWeight="Bold">Motivo</Run>
            <Run Text="{x:Bind Motivo}" />
        </Paragraph>
    </RichTextBlock>
</ContentDialog>
