<Page x:Class="NFeFacil.Login.EscolhaVendedor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:view="using:NFeFacil.View"
      xmlns:controles="using:BaseGeral.Controles"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <GridView x:Name="grdVendedores"
              Padding="16"
              SelectionChanged="VendedorEscolhido">
        <GridView.ItemTemplate>
            <DataTemplate x:DataType="view:ConjuntoBasicoExibicao">
                <controles:ExibicaoImagem Imagem="{x:Bind Imagem}"
                                          Principal="{x:Bind Principal}"
                                          Secundario="{x:Bind Secundario}" />
            </DataTemplate>
        </GridView.ItemTemplate>
    </GridView>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Admin"
                          Label="Logar como administrador"
                          Click="LogarAdiministrador" />
        </CommandBar>
    </Page.BottomAppBar>
</Page>
