<Page x:Class="NFeFacil.Login.EscolhaEmitente"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:root="using:NFeFacil"
      xmlns:controles="using:NFeFacil.Controles"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <GridView x:Name="grdEmitentes"
              Padding="16"
              SelectionChanged="EmitenteEscolhido">
        <GridView.ItemTemplate>
            <DataTemplate x:DataType="root:ConjuntoBasicoExibicao">
                <controles:ExibicaoImagem Imagem="{x:Bind Imagem}"
                                          Principal="{x:Bind Principal}"
                                          Secundario="{x:Bind Secundario}" />
            </DataTemplate>
        </GridView.ItemTemplate>
    </GridView>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Add"
                          Label="Cadastrar-se"
                          Click="Cadastrar" />
        </CommandBar>
    </Page.BottomAppBar>
</Page>
