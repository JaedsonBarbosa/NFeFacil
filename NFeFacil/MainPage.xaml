<Page x:Class="NFeFacil.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Estilos/CoresDestaque.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid x:Name="TitleBar"
              Background="{StaticResource PoucoVariada}"
              Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnRetornar"
                    Background="#00000000"
                    Margin="0"
                    Width="48"
                    VerticalAlignment="Stretch"
                    BorderThickness="0">
                <SymbolIcon Symbol="Back" />
            </Button>
            <StackPanel x:Name="MainTitleBar"
                        Grid.Column="1"
                        Orientation="Horizontal"
                        Background="#00000000">
                <ContentControl Name="symTitulo"
                                VerticalAlignment="Center"
                                Margin="16,0" />
                <TextBlock Name="txtTitulo"
                           Style="{StaticResource BodyTextBlockStyle}"
                           VerticalAlignment="Center"
                           FontWeight="Bold">Nota Fácil</TextBlock>
            </StackPanel>
        </Grid>
        <Frame Name="frmPrincipal"
               Grid.Row="1" />
        <Border Name="grdAvisoRotacao"
                Visibility="Collapsed"
                Background="{StaticResource MuitoVariada}"
                BorderBrush="{StaticResource Normal}"
                BorderThickness="0,2,0,0"
                VerticalAlignment="Bottom"
                Grid.Row="2">
            <TextBlock TextWrapping="Wrap"
                       Margin="8,4"
                       TextAlignment="Justify">
                            <Run FontStyle="Italic">Por favor, esta orientação de tela não é a mais adequada para visualização desta página, por favor, </Run>
                            <Run FontWeight="Bold">rotacione seu dispositivo para a orientação horizontal.</Run></TextBlock>
        </Border>
    </Grid>
</Page>
