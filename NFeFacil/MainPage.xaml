<Page x:Class="NFeFacil.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Estilos/CoresDestaque.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="grupoTamanhoTela">
                <VisualState x:Name="TelaGrande">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="768" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="TelaPequena">
                    <VisualState.Setters>
                        <Setter Target="ColunaHamburguer.Width"
                                Value="Auto" />
                        <Setter Target="ColunaMenuPermanente.Width"
                                Value="0" />
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="TitleBar"
              Background="{StaticResource PoucoVariada}"
              Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="0"
                                  x:Name="ColunaHamburguer" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnRetornar"
                    Background="#00000000"
                    VerticalAlignment="Stretch"
                    Width="48"
                    BorderThickness="0">
                <SymbolIcon Symbol="Back" />
            </Button>
            <Button x:Name="btnHambuguer"
                    Grid.Column="1"
                    VerticalAlignment="Stretch"
                    Visibility="Collapsed"
                    Background="#00000000"
                    Width="48"
                    BorderThickness="0"
                    Click="AbrirHamburguer">
                <FontIcon Glyph="&#xE700;" />
            </Button>
            <Grid x:Name="MainTitleBar"
                  Grid.Column="2"
                  Background="#00000000">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ContentControl Name="symTitulo"
                                VerticalAlignment="Center"
                                Margin="8,0" />
                <TextBlock Name="txtTitulo"
                           Grid.Column="1"
                           Style="{StaticResource BodyTextBlockStyle}"
                           VerticalAlignment="Center"
                           FontWeight="Bold">Nota Fácil</TextBlock>
                <TextBlock x:Name="txtEscolhido"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           Margin="4,0,0,0" />
            </Grid>
            <ComboBox Grid.Column="3"
                      x:Name="cmbEscolha"
                      VerticalAlignment="Center"
                      DisplayMemberPath="Nome"
                      Margin="4,0,0,0" />
        </Grid>
        <SplitView x:Name="splitView"
                   Grid.Row="1"
                   DisplayMode="CompactOverlay">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"
                                      x:Name="ColunaMenuPermanente" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ContentPresenter x:Name="menuPermanente"
                                  Visibility="Collapsed"
                                  Width="256"
                                  Margin="16, 0, 0, 0"
                                  Padding="0,16,0,16"
                                  BorderBrush="{StaticResource Normal}"
                                  BorderThickness="0,0,2,0" />
                <Frame Name="frmPrincipal"
                       Grid.Column="1">
                    <Frame.ContentTransitions>
                        <TransitionCollection>
                            <NavigationThemeTransition>
                                <DrillInNavigationTransitionInfo />
                            </NavigationThemeTransition>
                        </TransitionCollection>
                    </Frame.ContentTransitions>
                </Frame>
            </Grid>
        </SplitView>
    </Grid>
</Page>
