<Page x:Class="NFeFacil.Certificacao.ConfiguracoesCertificadoImportado"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:primitivos="using:Fiscal.Certificacao.LAN.Primitivos"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <ListView ItemsSource="{x:Bind ListaCertificados}"
              Margin="16">
        <ListView.Header>
            <Grid Style="{StaticResource Cabecalho}">
                <TextBlock Style="{StaticResource TextoCabecalho}">Certificados importados</TextBlock>
            </Grid>
        </ListView.Header>
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="primitivos:CertificadoExibicao">
                <TextBlock Text="{x:Bind Subject}">
                    <TextBlock.ContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Click="RemoverCertificado">Remover</MenuFlyoutItem>
                        </MenuFlyout>
                    </TextBlock.ContextFlyout></TextBlock>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Label="Importar"
                          Icon="Import"
                          Click="ImportarCertificado" />
        </CommandBar>
    </Page.BottomAppBar>
</Page>
