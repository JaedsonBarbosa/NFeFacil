<Page x:Class="NFeFacil.Certificacao.ConfiguracoesServidorCertificacao"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:my="using:BaseGeral.Controles"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <ItemsControl Style="{StaticResource ItensMedios}"
                  Margin="16">
        <my:ItemPadrao Titulo="Instalar servidor"
                       Descricao="Salve o instalador do servidor de certificação."
                       Tapped="InstalarServidor">
            <FontIcon Glyph="&#xEC4E;" />
        </my:ItemPadrao>
        <my:ItemPadrao Titulo="Corrigir problemas"
                       Descricao="Usando o gerenciador de loopback do Windows"
                       Tapped="RepararProblemas">
            <SymbolIcon Symbol="Repair" />
        </my:ItemPadrao>
    </ItemsControl>
</Page>
