<ContentDialog x:Class="NFeFacil.ViewNFe.CaixasDialogoNFe.AdicionarFornecimentoDiario"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:controles="using:NFeFacil.Controles"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               Title="Adicionar fornecimento diário"
               PrimaryButtonText="Adicionar"
               SecondaryButtonText="Cancelar">
    <StackPanel>
        <controles:EntradaNumerica Format="2"
                                   Number="{x:Bind Contexto.Dia, Mode=TwoWay}"
                                   Header="Dia" />
        <controles:EntradaNumerica Format="11:10"
                                   Number="{x:Bind Contexto.Qtde, Mode=TwoWay}"
                                   Header="Quantidade" />
    </StackPanel>
</ContentDialog>
