<Page x:Class="NFeFacil.ViewNFe.Impostos.DetalhamentoCOFINS.DetalharCOFINSAmbos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controles="using:NFeFacil.Controles"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <controles:EntradaNumerica Format="5:4"
                                   Header="Alíquota"
                                   Number="{x:Bind Aliquota, Mode=TwoWay}"
                                   IsEnabled="{x:Bind CalculoAliquota}" />
        <controles:EntradaNumerica Grid.Row="1"
                                   Format="15:4"
                                   Header="Valor por unidade"
                                   Number="{x:Bind Valor, Mode=TwoWay}"
                                   IsEnabled="{x:Bind CalculoValor}" />
    </Grid>
</Page>
