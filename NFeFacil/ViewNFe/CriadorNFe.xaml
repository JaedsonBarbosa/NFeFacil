<ContentDialog x:Class="NFeFacil.ViewNFe.CriadorNFe"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:controles="using:NFeFacil.Controles"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               Title="Criador de NFe"
               PrimaryButtonText="Criar"
               SecondaryButtonText="Cancelar"
               PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <StackPanel>
        <CheckBox IsChecked="{x:Bind AmbienteHomolocagao, Mode=TwoWay}"
                  IsEnabled="{x:Bind PodeUsarAmbienteHomolocagao}">Usar ambiente de homologação</CheckBox>
        <controles:EntradaNumerica Header="Série"
                                   Format="3"
                                   Number="{x:Bind Serie, Mode=TwoWay}" />
        <Button Click="CalcularNumero_Click">Calcular número da NFe</Button>
        <controles:EntradaNumerica x:Name="txtNumero"
                                   Header="Número"
                                   Format="9" />
    </StackPanel>
</ContentDialog>
