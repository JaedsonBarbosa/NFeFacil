<Page x:Class="NFeFacil.View.ManipulacaoProdutoCompleto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:VM="using:NFeFacil.ViewModel"
      xmlns:Impostos="using:NFeFacil.ModeloXML.PartesProcesso.PartesNFe.PartesDetalhes.PartesProduto.PartesImpostos"
      xmlns:ImpostosContext="using:NFeFacil.ViewModel.ImpostosProduto"
      xmlns:controles="using:NFeFacil.View.Controles"
      xmlns:Conversores="using:NFeFacil.ViewModel.Converters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      x:Name="root"
      mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Estilos/GridResponsiva.xaml" />
                <ResourceDictionary Source="Estilos/PivotPrincipal.xaml" />
                <ResourceDictionary Source="Estilos/Tabela.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Conversores:BoolToVisibility x:Key="visibilidade" />
            <Conversores:EstadoToMunicipios x:Key="obterMunicipio" />
            <Conversores:StringToDateTime x:Key="data" />
            <VM:DadosEstadosParaView x:Key="estados" />
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <FlipView x:Name="main"
                  Padding="16"
                  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <ScrollViewer DataContext="{Binding ProdutoCompleto.Produto}">
                <ItemsControl Style="{StaticResource ItensResponsivos}">
                    <TextBox Text="{Binding CodigoProduto, Mode=TwoWay}"
                             InputScope="Text"
                             Header="Código *" />
                    <controles:EntradaRestrita Pattern="[^\d]"
                                               Text="{Binding CodigoBarras, Mode=TwoWay}"
                                               Header="EAN" />
                    <TextBox Text="{Binding Descricao, Mode=TwoWay}"
                             InputScope="Text"
                             Header="Descrição *" />
                    <controles:EntradaRestrita Pattern="[^\d]"
                                               Text="{Binding NCM, Mode=TwoWay}"
                                               Header="NCM" />
                    <controles:EntradaRestrita Pattern="[^\d]"
                                               Text="{Binding EXTIPI, Mode=TwoWay}"
                                               Header="EX TIPI" />
                    <controles:EntradaNumerica Format="4"
                                               Number="{Binding CFOP, Mode=TwoWay}"
                                               Header="CFOP *" />
                    <TextBox Text="{Binding UnidadeComercializacao, Mode=TwoWay}"
                             InputScope="Text"
                             Header="Unidade comercial" />
                    <controles:EntradaNumerica Format="11:4"
                                               Number="{Binding QuantidadeComercializada, Mode=TwoWay}"
                                               Header="Qtd. comercial" />
                    <controles:EntradaNumerica Format="11:10"
                                               Number="{Binding ValorUnitario, Mode=TwoWay}"
                                               Header="Valor unid. comercial" />
                    <controles:EntradaNumerica Format="13:2"
                                               Number="{Binding ValorTotal, Mode=TwoWay}"
                                               Header="Total bruto" />
                    <controles:EntradaRestrita Pattern="[^\d]"
                                               Text="{Binding CodigoBarrasTributo, Mode=TwoWay}"
                                               Header="EAN Unid. Tributável" />
                    <TextBox Text="{Binding UnidadeTributacao, Mode=TwoWay}"
                             InputScope="Text"
                             Header="Unidade tributária" />
                    <controles:EntradaNumerica Format="11:4"
                                               Number="{Binding QuantidadeTributada, Mode=TwoWay}"
                                               Header="Qtd. tributária" />
                    <controles:EntradaNumerica Format="11:10"
                                               Number="{Binding ValorUnitarioTributo, Mode=TwoWay}"
                                               Header="Valor unid. tributária" />
                    <controles:EntradaRestrita Pattern="[^\d]"
                                               Text="{Binding Frete, Mode=TwoWay}"
                                               Header="Frete" />
                    <controles:EntradaRestrita Pattern="[^\d]"
                                               Text="{Binding Seguro, Mode=TwoWay}"
                                               Header="Seguro" />
                    <controles:EntradaRestrita Pattern="[^\d]"
                                               Text="{Binding Desconto, Mode=TwoWay}"
                                               Header="Desconto" />
                    <controles:EntradaRestrita Pattern="[^\d]"
                                               Text="{Binding DespesasAcessórias, Mode=TwoWay}"
                                               Header="Desp. acessórias" />
                    <ComboBox Header="O valor do item..."
                              SelectedIndex="{Binding InclusãoTotal, Mode=TwoWay}"
                              HorizontalAlignment="Stretch">
                        <ComboBoxItem>Não compõe o valor total da NF-e</ComboBoxItem>
                        <ComboBoxItem>compõe o valor total da NF-e</ComboBoxItem>
                    </ComboBox>
                    <TextBox Text="{Binding XPed, Mode=TwoWay}"
                             InputScope="Number"
                             Header="Pedido de compra" />
                    <controles:EntradaRestrita Pattern="[^\d]"
                                               Text="{Binding NItemPed, Mode=TwoWay}"
                                               Header="Nº do item do pedido" />
                    <TextBox Text="{Binding NFCI, Mode=TwoWay}"
                             InputScope="Number"
                             Header="Nº de controle da FCI" />
                </ItemsControl>
            </ScrollViewer>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Text="Valor total dos tributos"
                           VerticalAlignment="Center" />
                <TextBox Text="{Binding ProdutoCompleto.Impostos.vTotTrib, Mode=TwoWay}"
                         InputScope="Number"
                         Grid.Column="1" />
                <RadioButton GroupName="TipoImposto"
                             Content="ICMS"
                             Grid.Row="1"
                             IsChecked="{Binding TipoICMSSelecionado, Mode=TwoWay}" />
                <RadioButton Content="ISSQN"
                             GroupName="TipoImposto"
                             Grid.Row="1"
                             Grid.Column="1" />
                <Pivot Grid.Row="2"
                       x:Name="pvtImpostos"
                       Grid.ColumnSpan="2">
                    <PivotItem IsEnabled="{Binding AtivadopvtICMS}"
                               Header="ICMS">
                        <ScrollViewer DataContext="{Binding ContextoICMS}">
                            <StackPanel>
                                <ComboBox SelectedIndex="{Binding RegimeSelecionado, Mode=TwoWay}"
                                          Header="Regime"
                                          HorizontalAlignment="Stretch"
                                          PlaceholderText="Qual o regime de sua empresa?">
                                    <ComboBoxItem Content="Simples nacional" />
                                    <ComboBoxItem Content="Regime normal" />
                                </ComboBox>
                                <StackPanel Visibility="{Binding GrupoSimplesNacional, Converter={StaticResource visibilidade}}">
                                    <ComboBox SelectedValue="{Binding TipoICMSSimplesNacional, Mode=TwoWay}"
                                              SelectedValuePath="Tag"
                                              HorizontalAlignment="Stretch"
                                              Header="Situação tributária">
                                        <ComboBoxItem Tag="101">101. Tributada com permissão de crédito</ComboBoxItem>
                                        <ComboBoxItem Tag="102">102. Tributada sem permissão de crédito</ComboBoxItem>
                                        <ComboBoxItem Tag="103">103. Isenção para faixa de receita bruta</ComboBoxItem>
                                        <ComboBoxItem Tag="201">201. Tributada com permissão de crédito e com cobrança do ICMS por subst. tributária</ComboBoxItem>
                                        <ComboBoxItem Tag="202">202. Tributada sem permissão de crédito e com cobrança do ICMS por subst. tributária</ComboBoxItem>
                                        <ComboBoxItem Tag="203">203. Isenção para faixa de receita bruta e com cobrança do ICMS por subst. tributária</ComboBoxItem>
                                        <ComboBoxItem Tag="300">300. Imune</ComboBoxItem>
                                        <ComboBoxItem Tag="400">400. Não tributada</ComboBoxItem>
                                        <ComboBoxItem Tag="500">500. ICMS cobrado anteriormente por subst. tributária ou por antecipação</ComboBoxItem>
                                        <ComboBoxItem Tag="900">900. Outros</ComboBoxItem>
                                    </ComboBox>
                                    <ComboBox SelectedValue="{Binding OrigemSimples, Mode=TwoWay}"
                                              SelectedValuePath="Tag"
                                              Header="Origem"
                                              HorizontalAlignment="Stretch">
                                        <ComboBoxItem Tag='0'>0 - Nacional, exceto as indicadas nos códigos 3, 4, 5 e 8</ComboBoxItem>
                                        <ComboBoxItem Tag='1'>1 - Estrangeira - Importação direta, exceto a indicada no código 6</ComboBoxItem>
                                        <ComboBoxItem Tag='2'>2 - Estrangeira - Adquirida no mercado interno, exceto a indicada no código 7</ComboBoxItem>
                                        <ComboBoxItem Tag='3'>3 - Nacional, mercadoria ou bem com Conteúdo de Importação superior a 40% e inferior ou igual a 70%</ComboBoxItem>
                                        <ComboBoxItem Tag='4'>4 - Nacional, cuja produção tenha sido feita em conformidade com os processos produtivos básicos de que tratam as legislações citadas nos Ajustes</ComboBoxItem>
                                        <ComboBoxItem Tag='5'>5 - Nacional, mercadoria ou bem com Conteúdo de Importação inferior ou igual a 40%</ComboBoxItem>
                                        <ComboBoxItem Tag='6'>6 - Estrangeira - Importação direta, sem similar nacional, constante em lista da CAMEX e gás natural</ComboBoxItem>
                                        <ComboBoxItem Tag='7'>7 - Estrangeira - Adquirida no mercado interno, sem similar nacional, constante lista CAMEX e gás natural</ComboBoxItem>
                                        <ComboBoxItem Tag='8'>8 - Nacional, mercadoria ou bem com Conteúdo de Importação superior a 70%</ComboBoxItem>
                                    </ComboBox>
                                    <ItemsControl Style="{StaticResource ItensResponsivos}">
                                        <TextBox IsEnabled="{Binding SimplesGrupoFim}"
                                                 Text="{Binding Simples.pCredSN, Mode=TwoWay}"
                                                 Header="Alíquota aplicável de cálculo do crédito"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding SimplesGrupoFim}"
                                                 Text="{Binding Simples.vCredICMSSN, Mode=TwoWay}"
                                                 Header="Crédito do ICMS que pode ser aproveitado"
                                                 InputScope="Number" />
                                        <ComboBox IsEnabled="{Binding SimplesGrupoInicio}"
                                                  SelectedIndex="{Binding Simples.modBCST, Mode=TwoWay}"
                                                  Header="Modalidade de determinação da BC do ICMS"
                                                  HorizontalAlignment="Stretch">
                                            <ComboBoxItem>Margem Valor Agregado (%)</ComboBoxItem>
                                            <ComboBoxItem>Pauta (Valor)</ComboBoxItem>
                                            <ComboBoxItem>Preço Tabelado Máx (valor)</ComboBoxItem>
                                            <ComboBoxItem>Valor da operação</ComboBoxItem>
                                        </ComboBox>
                                        <TextBox IsEnabled="{Binding SimplesGrupoInicio}"
                                                 Text="{Binding Simples.vBC, Mode=TwoWay}"
                                                 Header="Valor da BC do ICMS"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding SimplesGrupoInicio}"
                                                 Text="{Binding Simples.pRedBC, Mode=TwoWay}"
                                                 Header="Percentual da Redução de BC"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding SimplesGrupoInicio}"
                                                 Text="{Binding Simples.pICMS, Mode=TwoWay}"
                                                 Header="Alíquota do imposto"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding SimplesGrupoInicio}"
                                                 Text="{Binding Simples.vICMS, Mode=TwoWay}"
                                                 Header="Valor do ICMS"
                                                 InputScope="Number" />
                                    </ItemsControl>
                                    <TextBlock Text="ICMS ST"
                                               Style="{StaticResource SubtitleTextBlockStyle}" />
                                    <ItemsControl Style="{StaticResource ItensResponsivos}"
                                                  IsEnabled="{Binding SimplesICMSST}">
                                        <ComboBox SelectedIndex="{Binding Simples.modBCST, Mode=TwoWay}"
                                                  Header="Modalidade de determinação da BC do ICMS ST"
                                                  HorizontalAlignment="Stretch">
                                            <ComboBoxItem Content="Preço tabelado ou máximo sugerido" />
                                            <ComboBoxItem Content="Lista negativa (valor)" />
                                            <ComboBoxItem Content="Lista positiva (valor)" />
                                            <ComboBoxItem Content="Lista neutra (valor)" />
                                            <ComboBoxItem Content="Margem Valor Agregado (%)" />
                                            <ComboBoxItem Content="Pauta (valor)" />
                                        </ComboBox>
                                        <TextBox Text="{Binding Simples.pMVAST, Mode=TwoWay}"
                                                 Header="Percentual da margem de valor adicionado"
                                                 InputScope="Number" />
                                        <TextBox Text="{Binding Simples.pRedBCST, Mode=TwoWay}"
                                                 Header="Percentual da Redução de BC"
                                                 InputScope="Number" />
                                        <TextBox Text="{Binding Simples.vBCST, Mode=TwoWay}"
                                                 Header="Valor da BC"
                                                 InputScope="Number" />
                                        <TextBox Text="{Binding Simples.pICMSST, Mode=TwoWay}"
                                                 Header="Alíquota do imposto"
                                                 InputScope="Number" />
                                        <TextBox Text="{Binding Simples.vICMSST, Mode=TwoWay}"
                                                 Header="Valor do ICMS ST"
                                                 InputScope="Number" />
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel Visibility="{Binding GrupoRegimeNormal, Converter={StaticResource visibilidade}}">
                                    <ComboBox SelectedValue="{Binding TipoICMSRegimeNormal, Mode=TwoWay}"
                                              SelectedValuePath="Content"
                                              Header="Situação tributária"
                                              HorizontalAlignment="Stretch">
                                        <ComboBoxItem Tag="00">00. Tributada integralmente</ComboBoxItem>
                                        <ComboBoxItem Tag="10">10. Tributada e com cobrança por ST</ComboBoxItem>
                                        <ComboBoxItem Tag="1010">10. Tributada e com cobrança por ST (Partilha - ICMSPart)</ComboBoxItem>
                                        <ComboBoxItem Tag="20">20. Com redução de base de cálculo</ComboBoxItem>
                                        <ComboBoxItem Tag="30">30. Isenta ou não tributada e com cobrança por ST</ComboBoxItem>
                                        <ComboBoxItem Tag="40">40. Isenta</ComboBoxItem>
                                        <ComboBoxItem Tag="41">41. Não tributada</ComboBoxItem>
                                        <ComboBoxItem Tag="4141">41. Não tributada (Interestadual - ICMSST)</ComboBoxItem>
                                        <ComboBoxItem Tag="50">50. Suspensão</ComboBoxItem>
                                        <ComboBoxItem Tag="51">51. Diferimento</ComboBoxItem>
                                        <ComboBoxItem Tag="60">60. ICMS cobrado anteriormente por ST</ComboBoxItem>
                                        <ComboBoxItem Tag="70">70. Com redução de base de cálculo e cobrança por ST</ComboBoxItem>
                                        <ComboBoxItem Tag="90">90. Outros</ComboBoxItem>
                                        <ComboBoxItem Tag="9090">90. Outros (Partilha - ICMSPart)</ComboBoxItem>
                                    </ComboBox>
                                    <ComboBox SelectedValue="{Binding Normal.orig, Mode=TwoWay}"
                                              SelectedValuePath="Tag"
                                              Header="Origem"
                                              HorizontalAlignment="Stretch">
                                        <ComboBoxItem Tag='0'>0 - Nacional, exceto as indicadas nos códigos 3, 4, 5 e 8</ComboBoxItem>
                                        <ComboBoxItem Tag='1'>1 - Estrangeira - Importação direta, exceto a indicada no código 6</ComboBoxItem>
                                        <ComboBoxItem Tag='2'>2 - Estrangeira - Adquirida no mercado interno, exceto a indicada no código 7</ComboBoxItem>
                                        <ComboBoxItem Tag='3'>3 - Nacional, mercadoria ou bem com Conteúdo de Importação superior a 40% e inferior ou igual a 70%</ComboBoxItem>
                                        <ComboBoxItem Tag='4'>4 - Nacional, cuja produção tenha sido feita em conformidade com os processos produtivos básicos de que tratam as legislações citadas nos Ajustes</ComboBoxItem>
                                        <ComboBoxItem Tag='5'>5 - Nacional, mercadoria ou bem com Conteúdo de Importação inferior ou igual a 40%</ComboBoxItem>
                                        <ComboBoxItem Tag='6'>6 - Estrangeira - Importação direta, sem similar nacional, constante em lista da CAMEX e gás natural</ComboBoxItem>
                                        <ComboBoxItem Tag='7'>7 - Estrangeira - Adquirida no mercado interno, sem similar nacional, constante lista CAMEX e gás natural</ComboBoxItem>
                                        <ComboBoxItem Tag='8'>8 - Nacional, mercadoria ou bem com Conteúdo de Importação superior a 70%</ComboBoxItem>
                                    </ComboBox>
                                    <ItemsControl Style="{StaticResource ItensResponsivos}">
                                        <TextBox IsEnabled="{Binding NormalICMSDesonerado}"
                                                 Text="{Binding Normal.vICMSDeson, Mode=TwoWay}"
                                                 Header="Valor do ICMS desonerado"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding NormalICMSDesonerado}"
                                                 Text="{Binding Normal.motDesICMS, Mode=TwoWay}"
                                                 Header="Motivo da desoneração do ICMS"
                                                 InputScope="Number"
                                                 ToolTipService.ToolTip="3 p/ agropecuária; 9 p/ outros e 12 p/ fomento e desenv. agropecuário." />
                                        
                                        <ComboBox IsEnabled="{Binding NormalGrupoInicio}"
                                                  SelectedIndex="{Binding Normal.modBC, Mode=TwoWay}"
                                                  Header="Modalidade de determinação da BC do ICMS"
                                                  HorizontalAlignment="Stretch">
                                            <ComboBoxItem>Margem Valor Agregado (%)</ComboBoxItem>
                                            <ComboBoxItem>Pauta (Valor)</ComboBoxItem>
                                            <ComboBoxItem>Preço Tabelado Máx (valor)</ComboBoxItem>
                                            <ComboBoxItem>Valor da operação</ComboBoxItem>
                                        </ComboBox>
                                        <TextBox IsEnabled="{Binding NormalGrupoInicio}"
                                                 Text="{Binding Normal.vBC, Mode=TwoWay}"
                                                 Header="Valor da BC do ICMS"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding NormalPercentualReduçãoNormal}"
                                                 Text="{Binding Normal.pRedBC, Mode=TwoWay}"
                                                 Header="Percentual da Redução de BC"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding NormalGrupoInicio}"
                                                 Text="{Binding Normal.pICMS, Mode=TwoWay}"
                                                 Header="Alíquota do imposto"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding NormalGrupoInicio}"
                                                 Text="{Binding Normal.vICMS, Mode=TwoWay}"
                                                 Header="Valor do ICMS"
                                                 InputScope="Number" />
                                        
                                        <TextBox IsEnabled="{Binding NormalGrupoMeio}"
                                                 Text="{Binding Normal.vBCSTRet, Mode=TwoWay}"
                                                 Header="Valor da BC do ICMS ST retido"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding NormalGrupoMeio}"
                                                 Text="{Binding Normal.vICMSSTRet, Mode=TwoWay}"
                                                 Header="Valor do ICMS ST retido"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding NormalICMSST}"
                                                 Text="{Binding Normal.vBCSTDest, Mode=TwoWay}"
                                                 Header="BC do ICMS ST da UF destino"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding NormalICMSST}"
                                                 Text="{Binding Normal.vICMSSTDest, Mode=TwoWay}"
                                                 Header="BC do ICMS ST da UF destino"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding NormalGrupoFim}"
                                                 Text="{Binding Normal.vICMSOp, Mode=TwoWay}"
                                                 Header="Valor do ICMS da Operação"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding NormalGrupoFim}"
                                                 Text="{Binding Normal.pDif, Mode=TwoWay}"
                                                 Header="Percentual do diferimento"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding NormalGrupoFim}"
                                                 Text="{Binding Normal.vICMSDif, Mode=TwoWay}"
                                                 Header="Valor do ICMS diferido"
                                                 InputScope="Number" />
                                        <TextBox IsEnabled="{Binding NormalICMSPart}"
                                                 Text="{Binding Normal.pBCOp, Mode=TwoWay}"
                                                 Header="% BC operação própria"
                                                 InputScope="Number" />
                                        <ComboBox IsEnabled="{Binding NormalICMSPart}"
                                                  ItemsSource="{Binding SiglasExpandida, Source={StaticResource estados}}"
                                                  SelectedValue="{Binding Normal.UFST, Mode=TwoWay}" />
                                    </ItemsControl>
                                    <TextBlock Text="ICMS ST"
                                               Style="{StaticResource SubtitleTextBlockStyle}" />
                                    <ItemsControl Style="{StaticResource ItensResponsivos}"
                                                  IsEnabled="{Binding NormalICMSSTNormal}">
                                        <ComboBox SelectedIndex="{Binding Normal.modBCST, Mode=TwoWay}"
                                                  Header="Modalidade de determinação da BC do ICMS ST"
                                                  HorizontalAlignment="Stretch">
                                            <ComboBoxItem Content="Preço tabelado ou máximo sugerido" />
                                            <ComboBoxItem Content="Lista negativa (valor)" />
                                            <ComboBoxItem Content="Lista positiva (valor)" />
                                            <ComboBoxItem Content="Lista neutra (valor)" />
                                            <ComboBoxItem Content="Margem Valor Agregado (%)" />
                                            <ComboBoxItem Content="Pauta (valor)" />
                                        </ComboBox>
                                        <TextBox Text="{Binding Normal.pMVAST, Mode=TwoWay}"
                                                 Header="Percentual da margem de valor adicionado"
                                                 InputScope="Number" />
                                        <TextBox Text="{Binding Normal.pRedBCST, Mode=TwoWay}"
                                                 Header="Percentual da Redução de BC"
                                                 InputScope="Number" />
                                        <TextBox Text="{Binding Normal.vBCST, Mode=TwoWay}"
                                                 Header="Valor da BC"
                                                 InputScope="Number" />
                                        <TextBox Text="{Binding Normal.pICMSST, Mode=TwoWay}"
                                                 Header="Alíquota do imposto"
                                                 InputScope="Number" />
                                        <TextBox Text="{Binding Normal.vICMSST, Mode=TwoWay}"
                                                 Header="Valor do ICMS ST"
                                                 InputScope="Number" />
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </PivotItem>
                    <PivotItem Header="IPI">
                        <ScrollViewer DataContext="{Binding ContextoIPI}">
                            <StackPanel>
                                <ComboBox Header="Situação tributária"
                                          HorizontalAlignment="Stretch"
                                          SelectedValue="{Binding CSTSelecionado, Mode=TwoWay}"
                                          SelectedValuePath="Tag">
                                    <ComboBoxItem Tag="00">00=Entrada com recuperação de crédito</ComboBoxItem>
                                    <ComboBoxItem Tag="01">01=Entrada tributada com alíquota zero</ComboBoxItem>
                                    <ComboBoxItem Tag="02">02=Entrada isenta</ComboBoxItem>
                                    <ComboBoxItem Tag="03">03=Entrada não-tributada</ComboBoxItem>
                                    <ComboBoxItem Tag="04">04=Entrada imune</ComboBoxItem>
                                    <ComboBoxItem Tag="05">05=Entrada com suspensão</ComboBoxItem>
                                    <ComboBoxItem Tag="49">49=Outras entradas</ComboBoxItem>
                                    <ComboBoxItem Tag="50">50=Saída tributada</ComboBoxItem>
                                    <ComboBoxItem Tag="51">51=Saída tributada com alíquota zero</ComboBoxItem>
                                    <ComboBoxItem Tag="52">52=Saída isenta</ComboBoxItem>
                                    <ComboBoxItem Tag="53">53=Saída não-tributada</ComboBoxItem>
                                    <ComboBoxItem Tag="54">54=Saída imune</ComboBoxItem>
                                    <ComboBoxItem Tag="55">55=Saída com suspensão</ComboBoxItem>
                                    <ComboBoxItem Tag="99">99=Outras saídas</ComboBoxItem>
                                </ComboBox>
                                <ItemsControl Style="{StaticResource ItensResponsivos}">
                                    <TextBox Text="{Binding Conjunto.clEnq, Mode=TwoWay}"
                                             Header="Classe de enquadramento"
                                             InputScope="Number" />
                                    <TextBox Text="{Binding Conjunto.CNPJProd, Mode=TwoWay}"
                                             Header="CNPJ do produtor"
                                             InputScope="Number" />
                                    <TextBox Text="{Binding Conjunto.cEnq, Mode=TwoWay}"
                                             Header="Código de enquadramento" />
                                    <TextBox Text="{Binding Conjunto.qSelo, Mode=TwoWay}"
                                             Header="Qtd. do selo de controle"
                                             InputScope="Number" />
                                    <TextBox Header="Código do selo de controle"
                                             Text="{Binding Conjunto.cSelo, Mode=TwoWay}" />
                                </ItemsControl>
                                <ItemsControl Style="{StaticResource ItensResponsivos}">
                                    <ComboBox HorizontalAlignment="Stretch"
                                              Header="Tipo de cálculo"
                                              SelectedValue="{Binding TipoCalculo, Mode=TwoWay}"
                                              SelectedValuePath="Content"
                                              IsEnabled="{Binding ComboTipoCalculo}">
                                        <ComboBoxItem>Por alíquota</ComboBoxItem>
                                        <ComboBoxItem>Pelo valor por unidade</ComboBoxItem>
                                    </ComboBox>
                                    <TextBox Text="{Binding Path=Imposto.VBC, Mode=TwoWay}"
                                             Header="Valor da base de cálculo"
                                             InputScope="Number"
                                             IsEnabled="{Binding CalculoAliquota}" />
                                    <TextBox Text="{Binding Path=Imposto.PIPI, Mode=TwoWay}"
                                             Header="Alíquota"
                                             InputScope="Number"
                                             IsEnabled="{Binding CalculoAliquota}" />
                                    <TextBox Text="{Binding Path=Imposto.QUnid, Mode=TwoWay}"
                                             Header="Quantidade total"
                                             InputScope="Number"
                                             IsEnabled="{Binding CalculoValor}" />
                                    <TextBox Text="{Binding Path=Imposto.VUnid, Mode=TwoWay}"
                                             Header="Valor por unidade"
                                             InputScope="Number"
                                             IsEnabled="{Binding CalculoValor}" />
                                    <TextBox Text="{Binding Path=Imposto.VIPI, Mode=TwoWay}"
                                             Header="Valor do IPI"
                                             InputScope="Number"
                                             IsEnabled="{Binding Valor}" />
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                    </PivotItem>
                    <PivotItem Header="PIS">
                        <ScrollViewer DataContext="{Binding ContextoPIS}">
                            <StackPanel>
                                <ComboBox SelectedValue="{Binding CSTSelecionado, Mode=TwoWay}"
                                          SelectedValuePath="Tag"
                                          Header="Situação tributária"
                                          HorizontalAlignment="Stretch">
                                    <ComboBoxItem Tag="01">01=Operação Tributável (base de cálculo = valor da operação alíquota normal (cumulativo/não cumulativo))</ComboBoxItem>
                                    <ComboBoxItem Tag="02">02=Operação Tributável (base de cálculo = valor da operação (alíquota diferenciada))</ComboBoxItem>
                                    <ComboBoxItem Tag="03">03=Operação Tributável (base de cálculo = quantidade vendida x alíquota por unidade de Produto)</ComboBoxItem>
                                    <ComboBoxItem Tag="04">04=Operação Tributável (tributação monofásica (alíquota zero))</ComboBoxItem>
                                    <ComboBoxItem Tag="05">05=Operação Tributável (Substituição Tributária)</ComboBoxItem>
                                    <ComboBoxItem Tag="06">06=Operação Tributável (alíquota zero)</ComboBoxItem>
