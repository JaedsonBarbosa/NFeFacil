<Page x:Class="NFeFacil.View.Configuracoes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controles="using:NFeFacil.Controles"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <StackPanel Padding="16">
        <TextBlock Style="{StaticResource TitleTextBlockStyle}">Função do dispositivo na sincronização</TextBlock>
        <RadioButton IsChecked="{x:Bind Servidor, Mode=TwoWay}">Servidor</RadioButton>
        <RadioButton IsChecked="{x:Bind Cliente}">Cliente</RadioButton>
        <TextBlock Style="{StaticResource TitleTextBlockStyle}">Desconsiderar horário de verão</TextBlock>
        <TextBlock>Desconsidere o horário de verão caso você esteja tendo problemas ao transmitir as notas fiscais. Em muitos estados os servidores da SEFAZ não mudam com o horário de verão, então ative esta função para que o app se adeque a eles.</TextBlock>
        <ToggleSwitch IsOn="{x:Bind DesconsiderarHorarioVerao, Mode=TwoWay}" />
        <TextBlock Style="{StaticResource TitleTextBlockStyle}">Personalização</TextBlock>
        <ItemsControl Style="{StaticResource ItensMedios}">
            <controles:ItemPadrao Titulo="Definir background"
                                  Descricao="Escolha uma imagem para servir de background para o aplicativo"
                                  Tapped="DefinirBackground">
                <FontIcon Glyph="&#xEB9F;" />
            </controles:ItemPadrao>
        </ItemsControl>
    </StackPanel>
</Page>
