<UserControl x:Class="NFeFacil.View.TelasDadosBase.TelaEmitente"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///View/Estilos/Estilos.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Hidden"
                  xmlns:Ctrl="using:NFeFacil.Assets.Controles">
        <StackPanel>
            <TextBlock Text="Emitente"
                       Style="{StaticResource TitleTextBlockStyle}" />
            <ItemsControl Style="{StaticResource ItensResponsivos}">
                <TextBox Text="{Binding Emit.nome, Mode=TwoWay}"
                         InputScope="Text"
                         Header="Nome/Razão social *" />
                <TextBox Text="{Binding Emit.nomeFantasia, Mode=TwoWay}"
                         InputScope="Text"
                         Header="Nome fantasia" />
                <TextBox Text="{Binding Emit.CNPJ, Mode=TwoWay}"
                         InputScope="Number"
                         Header="CNPJ *" />
                <TextBox Text="{Binding Emit.inscricaoEstadual, Mode=TwoWay}"
                         InputScope="Number"
                         Header="Inscrição estadual *" />
                <TextBox Text="{Binding Emit.CNAE, Mode=TwoWay}"
                         InputScope="Number"
                         Header="CNAE Fiscal" />
                <TextBox Text="{Binding Emit.IM, Mode=TwoWay}"
                         InputScope="Number"
                         Header="Inscrição municipal" />
                <TextBox Text="{Binding Emit.IEST, Mode=TwoWay}"
                         InputScope="Number"
                         Header="Inscrição estadual (Subst. tributário)" />
                <ComboBox SelectedIndex="{Binding RegimeTributario, Mode=TwoWay}"
                          Header="Código do Regime Tributário *">
                    <ComboBoxItem Content="Simples Nacional" />
                    <ComboBoxItem Content="Simples Nacional, excesso sublimite de receita bruta" />
                    <ComboBoxItem Content="Regime Normal" />
                </ComboBox>
            </ItemsControl>
            <TextBlock Text="Endereço"
                       Style="{StaticResource TitleTextBlockStyle}" />
            <ItemsControl Style="{StaticResource ItensResponsivos}">
                <ComboBox ItemsSource="{Binding Path=UFs, Mode=OneWay}"
                          SelectedItem="{Binding Path=UFEscolhida, Mode=TwoWay}"
                          Header="Estado" />
                <ComboBox ItemsSource="{Binding Municipios, Mode=OneWay}"
                          SelectedItem="{Binding Path=MunicipioEscolhido, Mode=TwoWay}"
                          Header="Município" />
                <TextBox Text="{Binding Path=Emit.endereço.logradouro, Mode=TwoWay}"
                         InputScope="Text"
                         Header="Logradouro *" />
                <TextBox Text="{Binding Path=Emit.endereço.numero, Mode=TwoWay}"
                         InputScope="Text"
                         Header="Número *" />
                <TextBox Text="{Binding Path=Emit.endereço.complemento, Mode=TwoWay}"
                         InputScope="Text"
                         Header="Complemento" />
                <TextBox Text="{Binding Path=Emit.endereço.bairro, Mode=TwoWay}"
                         InputScope="Text"
                         Header="Bairro *" />
                <TextBox Text="{Binding Path=Emit.endereço.CEP, Mode=TwoWay}"
                         InputScope="Number"
                         Header="CEP" />
                <TextBox Text="{Binding Path=Emit.endereço.telefone, Mode=TwoWay}"
                         InputScope="Number"
                         Header="Telefone" />
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
