<ContentDialog x:Class="NFeFacil.View.DefinirImagem"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               Title="Definir imagem"
               PrimaryButtonText="Concluir"
               SecondaryButtonText="Cancelar"
               PrimaryButtonClick="Concluir">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image x:Name="imgAtual"
               Grid.ColumnSpan="2"
               Width="256"
               Height="256"
               Stretch="UniformToFill" />
        <Button Grid.Row="1" Click="Buscar">Buscar</Button>
        <Button Grid.Column="1"
                Grid.Row="1" Click="Apagar">Apagar</Button>
    </Grid>
</ContentDialog>
