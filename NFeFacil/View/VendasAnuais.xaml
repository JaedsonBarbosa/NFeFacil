<Page x:Class="NFeFacil.View.VendasAnuais"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:VM="using:NFeFacil.ViewModel"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Page.DataContext>
        <VM:RelatorioVendasAnuais />
    </Page.DataContext>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Padding="16">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="0,0,4,0"
                           VerticalAlignment="Center">Ano analisado:</TextBlock>
                <ComboBox ItemsSource="{Binding AnosDisponiveis, Mode=OneTime}"
                          SelectedItem="{Binding AnoEscolhido, Mode=TwoWay}"
                          MinWidth="160" />
            </StackPanel>
            <TextBlock>Quantidade total: <Run Text="{Binding QuantTotal}" /></TextBlock>
            <TextBlock>Valor total: <Run Text="{Binding ValorTotal}" /></TextBlock>
        </StackPanel>
        <FlipView x:Name="flipView"
                  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                  Padding="16,0,16,16"
                  Grid.Row="1">
            <FlipView.Resources>
                <Style TargetType="TextBlock"
                       BasedOn="{StaticResource SubtitleTextBlockStyle}" />
            </FlipView.Resources>
            <ListView ItemsSource="{Binding ResultadoMes}"
                      ItemContainerStyle="{StaticResource ItemFullWidth}">
                <ListView.Header>
                    <Grid Style="{StaticResource Cabecalho}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock TextAlignment="Center"
                                   VerticalAlignment="Center">Mês</TextBlock>
                        <TextBlock TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   Grid.Column="1">Quantidade</TextBlock>
                        <TextBlock TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   Grid.Column="2">Valor total</TextBlock>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding Mês}" />
                            <TextBlock TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding Quantidade}"
                                       Grid.Column="1" />
                            <TextBlock TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding Total}"
                                       Grid.Column="2" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView ItemsSource="{Binding ResultadoCliente}"
                      ItemContainerStyle="{StaticResource ItemFullWidth}">
                <ListView.Header>
                    <Grid Style="{StaticResource Cabecalho}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock TextAlignment="Center"
                                   VerticalAlignment="Center">Nome</TextBlock>
                        <TextBlock TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   Grid.Column="1">Quantidade</TextBlock>
                        <TextBlock TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   Grid.Column="2">Municipio</TextBlock>
                        <TextBlock TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   Grid.Column="3">Documento</TextBlock>
                        <TextBlock TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   Grid.Column="4">Total</TextBlock>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding Nome}" />
                            <TextBlock TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding Quantidade}"
                                       Grid.Column="1" />
                            <TextBlock TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding Mun}"
                                       Grid.Column="2" />
                            <TextBlock TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding Doc}"
                                       Grid.Column="3" />
                            <TextBlock TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding Total}"
                                       Grid.Column="4" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </FlipView>
    </Grid>
</Page>
