<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:Controles="using:NFeFacil.View.Controles"
      x:Class="NFeFacil.View.Inicio"
      mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <FlipView d:LayoutOverrides="LeftPosition, RightPosition">
            <FlipView.Resources>
                <ResourceDictionary>
                    <Style TargetType="StackPanel">
                        <Setter Property="VerticalAlignment"
                                Value="Center" />
                    </Style>
                    <Style x:Key="Titulo"
                           TargetType="TextBlock">
                        <Setter Property="HorizontalAlignment"
                                Value="Center" />
                        <Setter Property="FontSize"
                                Value="24" />
                    </Style>
                    <Style x:Key="Corpo"
                           TargetType="TextBlock">
                        <Setter Property="HorizontalAlignment"
                                Value="Center" />
                        <Setter Property="VerticalAlignment"
                                Value="Center" />
                        <Setter Property="FontSize"
                                Value="36" />
                        <Setter Property="FontWeight"
                                Value="Bold" />
                    </Style>
                </ResourceDictionary>
            </FlipView.Resources>
            <StackPanel>
                <TextBlock Style="{StaticResource Titulo}">
                    <Run Text="Notas emitidas" /></TextBlock>
                <TextBlock Style="{StaticResource Corpo}">
                    <Run Text="654" /></TextBlock>
            </StackPanel>
            <StackPanel>
                <TextBlock Style="{StaticResource Titulo}">
                    <Run Text="Taxa de sucesso de conexão" /></TextBlock>
            </StackPanel>
        </FlipView>
        <Controles:CarregamentoCircular Grid.Row="1"
                                        Fill="Black"
                                        Thickness="20"
                                        MaxValue="100"
                                        ActualValue="50"
                                        Elemento="Beleza"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch" />
    </Grid>
</Page>
