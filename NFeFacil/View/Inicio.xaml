<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controles="using:NFeFacil.View.Controles"
      x:Class="NFeFacil.View.Inicio"
      NavigationCacheMode="Required"
      mc:Ignorable="d">
    <ScrollViewer x:Name="root"
                  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                  ScrollViewer.VerticalScrollBarVisibility="Hidden"
                  Margin="8">
        <ItemsControl Style="{StaticResource ItensMedios}"
                      IsTabStop="False">
            <controles:ItemPadrao x:Name="GerenciarDadosBase"
                                  Titulo="Cadastros"
                                  Descricao="Gerencie as informações fundamentais para a criação das notas fiscais, que são: Emissor, cliente, transportador e Produto."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Manage" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="ControleEstoque"
                                  Titulo="Controle de estoque"
                                  Descricao="Informe alguns dados do estoque de cada produto, visualize e edite a quantidade de produtos no estoque e veja o resumo das últimas alterações no estoque."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Manage" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="ManipulacaoRegistroVenda"
                                  Titulo="Criar nova venda"
                                  Descricao="Crie o registro de uma venda apenas com as informações básicas, depois, se você quiser, poderá emitir a nota fiscal facilmente."
                                  Tapped="AbrirFunção">
                <FontIcon Glyph="&#xEC59;" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="CriadorNFe"
                                  Titulo="Criar nota fiscal"
                                  Descricao="Parte principal da aplicação. Aqui você pode criar uma nova nova fiscal e, posteriormente, transmití-la, imprimí-la e salvá-la."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Add" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="NotasSalvas"
                                  Titulo="Notas salvas"
                                  Descricao="Visialize todas as notas transmitidas por esta aplicação e realize ações básicas, como imprimir, exportar ou cancelar."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Library" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="RegistrosVenda"
                                  Titulo="Vendas salvas"
                                  Descricao="Veja todas as vendas feitas pela sua empresa e remova, visualize detalhes ou edite a respectiva venda."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Library" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="Consulta"
                                  Titulo="Consultar NF-e"
                                  Descricao="Consulte dados básicos de qualquer nota fiscal emitida por qualquer aplicação usando apenas o código da NF-e."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Find" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="VendasAnuais"
                                  Titulo="Análise anual"
                                  Descricao="Veja uma análise das vendas ocorridas em um ano, com a organização tanto por cliente quanto por mês."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Calendar" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="ConfiguracoesCertificado"
                                  Titulo="Certificado"
                                  Descricao="Configure os detalhes da certificação, importando um certificado A1 ou instalando e se conectando a um servidor de certificação."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Permissions" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="ImportacaoDados"
                                  Titulo="Importação de dados"
                                  Descricao="Importe dados base ou notas fiscais criados em outros programas ou aplicativos automaticamente (Padrão da SEFAZ requerido)."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Import" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="ConfigSincronizacao"
                                  Titulo="Sincronização"
                                  Descricao="Configure a sincronização entre dispositivos, adicione novos dispositivos ao servidor ou se conecte a um servidor."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Sync" />
            </controles:ItemPadrao>
        </ItemsControl>
    </ScrollViewer>
</Page>
