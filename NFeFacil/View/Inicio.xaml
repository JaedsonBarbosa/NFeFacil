<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controles="using:NFeFacil.View.Controles"
      x:Class="NFeFacil.View.Inicio"
      mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Estilos/GridResponsiva.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Storyboard x:Name="ocultarGrid">
                <DoubleAnimation Duration="0:0:0.25"
                                 To="0"
                                 Storyboard.TargetProperty="(UIElement.Opacity)"
                                 Storyboard.TargetName="root" />
            </Storyboard>
        </ResourceDictionary>
    </Page.Resources>
    <ScrollViewer x:Name="root" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                  ScrollViewer.VerticalScrollBarVisibility="Hidden">
        <ItemsControl Style="{StaticResource ItensMedios}"
                      IsTabStop="False">
            <controles:ItemPadrao x:Name="GerenciarDadosBase"
                                  Titulo="Gerenciar dados base"
                                  Descricao="Gerencie as informações fundamentais para a criação das notas fiscais, que são: Emissor, cliente, transportador e Produto."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Manage" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="ManipulacaoNotaFiscal"
                                  Titulo="Criar nota fiscal"
                                  Descricao="Parte principal da aplicação. Aqui você pode criar uma nova nova fiscal e, posteriormente, transmití-la, imprimí-la e salvá-la."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Add" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="NotasSalvas"
                                  Titulo="Notas salvas"
                                  Descricao="Visialize todas as notas transmitidas por esta aplicação e realize ações básicas, como imprimir, exportar ou cancelar."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Library" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="Consulta"
                                  Titulo="Consultar NF-e"
                                  Descricao="Consulte dados básicos de qualquer nota fiscal emitida por qualquer aplicação usando apenas o código da NF-e."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Find" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="VendasAnuais"
                                  Titulo="Análise anual"
                                  Descricao="Veja uma análise das vendas ocorridas em um ano, com a organização tanto por cliente quanto por mês."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Calendar" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="HistoricoSincronizacao"
                                  Titulo="Histórico de sincronização"
                                  Descricao="Veja todos os detalhes de todas as requisições efetuadas/recebidas por esta aplicação."
                                  Tapped="AbrirFunção">
                <FontIcon Glyph="&#xE81C;" />
            </controles:ItemPadrao>
            <controles:ItemPadrao x:Name="Configuracoes"
                                  Titulo="Configurações"
                                  Descricao="Configure a sincronização entre dispositivos, defina o certificao padrão e importe notas fiscais e dados base."
                                  Tapped="AbrirFunção">
                <SymbolIcon Symbol="Setting" />
            </controles:ItemPadrao>
        </ItemsControl>
    </ScrollViewer>
</Page>
