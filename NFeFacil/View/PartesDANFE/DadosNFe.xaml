<UserControl x:Class="NFeFacil.View.PartesDANFE.DadosNFe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary Source="EstilosPadrao.xaml" />
    </UserControl.Resources>
    <StackPanel BorderThickness="1"
                CornerRadius="2"
                BorderBrush="Black"
                Margin="{Binding Source={StaticResource dimensoes},Path=MargemBloco}">
        <Grid BorderBrush="Black"
              BorderThickness="0,0,0,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{x:Bind Coluna0}" />
                <ColumnDefinition Width="{x:Bind Coluna1}" />
                <ColumnDefinition Width="{x:Bind Coluna2}" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="{x:Bind Linha0}" />
                <RowDefinition Height="{Binding Source={StaticResource dimensoes}, Path=AlturaLinhaPadrao}" />
            </Grid.RowDefinitions>
            <StackPanel Padding="{StaticResource PaddingPadrao}">
                <TextBlock TextAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,10">SEVERINO ALVES SERAFIM ME</TextBlock>
                <TextBlock FontSize="12">SÍTIO BARRA, S/N</TextBlock>
                <TextBlock FontSize="12">ZONA RURAL</TextBlock>
                <TextBlock FontSize="12">CUITEGI - PB</TextBlock>
                <TextBlock FontSize="12">CEP: 58208-000</TextBlock>
                <TextBlock FontSize="12">FONE: (83) 98885-6440</TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="1"
                        BorderThickness="1,0,0,0"
                        BorderBrush="Black"
                        Padding="{StaticResource PaddingPadrao}">
                <TextBlock FontWeight="Bold"
                           TextAlignment="Center"
                           FontSize="16">DANFE</TextBlock>
                <TextBlock FontSize="10"
                           TextWrapping="Wrap">DOCUMENTO AUXILIAR DA NOTA FISCAL ELETRÔNICA</TextBlock>
                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock FontSize="10">0 - ENTRADA</TextBlock>
                    <TextBlock Grid.Row="1"
                               FontSize="10">1 - SAÍDA</TextBlock>
                    <Border BorderThickness="1"
                            BorderBrush="Black"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Column="1"
                            Grid.RowSpan="2"
                            CornerRadius="2">
                        <TextBlock FontWeight="Bold"
                                   Margin="2,1,1,1"
                                   FontSize="12">1</TextBlock>
                    </Border>
                </Grid>
                <TextBlock FontSize="12"
                           FontWeight="Bold">Nº: 000.000.275</TextBlock>
                <TextBlock FontSize="12"
                           FontWeight="Bold">Série: 1</TextBlock>
                <TextBlock FontSize="12"
                           FontWeight="Bold">Folha: 1/1</TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="2"
                        BorderThickness="1,0,0,0"
                        BorderBrush="Black">
                <StackPanel BorderThickness="0,0,0,1"
                            BorderBrush="Black"
                            Padding="{StaticResource PaddingPadrao}">
                    <TextBlock Style="{StaticResource Cabecalho}">CONTROLE DO FISCO</TextBlock>
                    <TextBlock FontFamily="ms-appx:/DANFE/html/code128.ttf#Code 128"
                               FontSize="24"
                               TextAlignment="Center"
                               FontWeight="Light"
                               Margin="0,2">25170512931158000164550010000003061984020000</TextBlock>
                </StackPanel>
                <StackPanel BorderThickness="0,0,0,1"
                            BorderBrush="Black"
                            Padding="{StaticResource PaddingPadrao}">
                    <TextBlock Style="{StaticResource Cabecalho}">CHAVE DE ACESSO DA NF-e</TextBlock>
                    <TextBlock FontSize="10"
                               TextAlignment="Center"
                               FontWeight="Bold"
                               Margin="0,2">2517 0512 9311 5800 0164 5500 1000 0003 0619 8402 0000</TextBlock>
                </StackPanel>
                <TextBlock FontSize="12"
                           Margin="{StaticResource PaddingPadrao}"
                           TextWrapping="Wrap">Consulta de autenticidade no portal nacional da NF-e www.nfe.fazenda.gov.br/portal ou no site da Sefaz autorizadora</TextBlock>
            </StackPanel>
            <StackPanel Grid.ColumnSpan="2"
                        Grid.Row="1"
                        BorderThickness="0,1,0,0"
                        BorderBrush="Black"
                        Padding="{StaticResource PaddingPadrao}">
                <TextBlock Style="{StaticResource Cabecalho}">NATUREZA DA OPERAÇÃO</TextBlock>
                <TextBlock Style="{StaticResource Conteudo}">VENDA</TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="2"
                        Grid.Row="1"
                        BorderThickness="1,1,0,0"
                        BorderBrush="Black"
                        Padding="{StaticResource PaddingPadrao}">
                <TextBlock Style="{StaticResource Cabecalho}">PROTOCOLO DE AUTORIZAÇÃO DE USO</TextBlock>
                <TextBlock Style="{StaticResource Conteudo}">325170008500346 2017-05-19 09:38:05-03:00</TextBlock>
            </StackPanel>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="{Binding Source={StaticResource dimensoes}, Path=AlturaLinhaPadrao}" />
            </Grid.RowDefinitions>
            <StackPanel Padding="{StaticResource PaddingPadrao}">
                <TextBlock Style="{StaticResource Cabecalho}">INSCRIÇÃO ESTADUAL</TextBlock>
                <TextBlock Style="{StaticResource Conteudo}">161813470</TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="1"
                        BorderThickness="1,0,1,0"
                        BorderBrush="Black"
                        Padding="{StaticResource PaddingPadrao}">
                <TextBlock Style="{StaticResource Cabecalho}">INSCR.ESTADUAL SUBSTITUTO</TextBlock>
                <TextBlock Style="{StaticResource Conteudo}"></TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="2"
                        Padding="{StaticResource PaddingPadrao}">
                <TextBlock Style="{StaticResource Cabecalho}">CNPJ</TextBlock>
                <TextBlock Style="{StaticResource Conteudo}">12931158000164</TextBlock>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
