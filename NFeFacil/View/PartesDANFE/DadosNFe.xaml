<UserControl x:Class="NFeFacil.View.PartesDANFE.DadosNFe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:barcode="using:NFeFacil.CodigoBarras"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary Source="EstilosPadrao.xaml" />
    </UserControl.Resources>
    <StackPanel BorderThickness="1"
                CornerRadius="2"
                BorderBrush="Black"
                Margin="{Binding Source={StaticResource dimensoes},Path=MargemBloco}">
        <Grid BorderBrush="Black"
              BorderThickness="0,0,0,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{x:Bind Coluna0}" />
                <ColumnDefinition Width="{x:Bind Coluna1}" />
                <ColumnDefinition Width="{x:Bind Coluna2}" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="{x:Bind Linha0}" />
                <RowDefinition Height="{Binding Source={StaticResource dimensoes}, Path=AlturaLinhaPadrao}" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image Source="{Binding Logotipo}" />
                <StackPanel Grid.Column="1"
                            Padding="{StaticResource PaddingPadrao}">
                    <TextBlock TextAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,10"
                               TextWrapping="Wrap"
                               Text="{Binding NomeEmitente}" />
                    <TextBlock FontSize="12"
                               TextWrapping="Wrap"><Run Text="{Binding Endereco.Logradouro}" />, <Run Text="{Binding Endereco.Numero}" /></TextBlock>
                    <TextBlock FontSize="12"
                               Text="{Binding Endereco.Bairro}" />
                    <TextBlock FontSize="12"><Run Text="{Binding Endereco.Municipio}" /> - <Run Text="{Binding Endereco.UF}" /></TextBlock>
                    <TextBlock FontSize="12">CEP: <Run Text="{Binding Endereco.CEP}" /></TextBlock>
                    <TextBlock FontSize="12">FONE: <Run Text="{Binding Endereco.Fone}" /></TextBlock>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Column="1"
                        BorderThickness="1,0,0,0"
                        BorderBrush="Black"
                        Padding="{StaticResource PaddingPadrao}">
                <TextBlock FontWeight="Bold"
                           TextAlignment="Center"
                           FontSize="16">DANFE</TextBlock>
                <TextBlock FontSize="10"
                           TextWrapping="Wrap">DOCUMENTO AUXILIAR DA NOTA FISCAL ELETRÔNICA</TextBlock>
                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock FontSize="10">0 - ENTRADA</TextBlock>
                    <TextBlock Grid.Row="1"
                               FontSize="10">1 - SAÍDA</TextBlock>
                    <Border BorderThickness="1"
                            BorderBrush="Black"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Column="1"
                            Grid.RowSpan="2"
                            CornerRadius="2">
                        <TextBlock FontWeight="Bold"
                                   Margin="2,1,1,1"
                                   FontSize="12"
                                   Text="{Binding TipoEmissao}" />
                    </Border>
                </Grid>
                <TextBlock FontSize="12"
                           FontWeight="Bold">Nº: <Run Text="{Binding NumeroNota}" /></TextBlock>
                <TextBlock FontSize="12"
                           FontWeight="Bold">Série: <Run Text="{Binding SerieNota}" /></TextBlock>
                <TextBlock FontSize="12"
                           FontWeight="Bold">Folha: <Run Text="{Binding PaginaAtual}" />/<Run Text="{Binding QuantPaginas}" /></TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="2"
                        BorderThickness="1,0,0,0"
                        BorderBrush="Black">
                <StackPanel BorderThickness="0,0,0,1"
                            BorderBrush="Black">
                    <TextBlock Style="{StaticResource Cabecalho}"
                               Margin="{StaticResource PaddingPadrao}">CONTROLE DO FISCO</TextBlock>
                    <barcode:Code128 Data="{Binding Chave}"
                                     Margin="0,2,0,4" />
                </StackPanel>
                <StackPanel BorderThickness="0,0,0,1"
                            BorderBrush="Black"
                            Padding="{StaticResource PaddingPadrao}">
                    <TextBlock Style="{StaticResource Cabecalho}">CHAVE DE ACESSO DA NF-e</TextBlock>
                    <TextBlock FontSize="10"
                               TextAlignment="Center"
                               FontWeight="Bold"
                               Margin="0,2"
                               Text="{Binding ChaveComMascara}" />
                </StackPanel>
                <TextBlock FontSize="12"
                           Margin="{StaticResource PaddingPadrao}"
                           TextWrapping="Wrap">Consulta de autenticidade no portal nacional da NF-e www.nfe.fazenda.gov.br/portal ou no site da Sefaz autorizadora</TextBlock>
            </StackPanel>
            <StackPanel Grid.ColumnSpan="2"
                        Grid.Row="1"
                        BorderThickness="0,1,0,0"
                        BorderBrush="Black"
                        Padding="{StaticResource PaddingPadrao}">
                <TextBlock Style="{StaticResource Cabecalho}">NATUREZA DA OPERAÇÃO</TextBlock>
                <TextBlock Style="{StaticResource Conteudo}"
                           Text="{Binding NatOp}" />
            </StackPanel>
            <StackPanel Grid.Column="2"
                        Grid.Row="1"
                        BorderThickness="1,1,0,0"
                        BorderBrush="Black"
                        Padding="{StaticResource PaddingPadrao}">
                <TextBlock Style="{StaticResource Cabecalho}">PROTOCOLO DE AUTORIZAÇÃO DE USO</TextBlock>
                <TextBlock Style="{StaticResource Conteudo}"><Run Text="{Binding NumeroProtocolo}" /> <Run Text="{Binding DataHoraRecibo}" /></TextBlock>
            </StackPanel>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="{Binding Source={StaticResource dimensoes}, Path=AlturaLinhaPadrao}" />
            </Grid.RowDefinitions>
            <StackPanel Padding="{StaticResource PaddingPadrao}">
                <TextBlock Style="{StaticResource Cabecalho}">INSCRIÇÃO ESTADUAL</TextBlock>
                <TextBlock Style="{StaticResource Conteudo}"
                           Text="{Binding IE}" />
            </StackPanel>
            <StackPanel Grid.Column="1"
                        BorderThickness="1,0,1,0"
                        BorderBrush="Black"
                        Padding="{StaticResource PaddingPadrao}">
                <TextBlock Style="{StaticResource Cabecalho}">INSCR.ESTADUAL SUBSTITUTO</TextBlock>
                <TextBlock Style="{StaticResource Conteudo}"
                           Text="{Binding IEST}" />
            </StackPanel>
            <StackPanel Grid.Column="2"
                        Padding="{StaticResource PaddingPadrao}">
                <TextBlock Style="{StaticResource Cabecalho}">CNPJ</TextBlock>
                <TextBlock Style="{StaticResource Conteudo}"
                           Text="{Binding CNPJEmit}" />
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
