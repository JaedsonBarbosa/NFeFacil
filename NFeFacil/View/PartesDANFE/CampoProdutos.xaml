<UserControl x:Class="NFeFacil.View.PartesDANFE.CampoProdutos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="720">
    <UserControl.Resources>
        <ResourceDictionary Source="EstilosPadrao.xaml" />
    </UserControl.Resources>
    <StackPanel Margin="{Binding Source={StaticResource dimensoes}, Path=MargemBloco}">
        <TextBlock Style="{StaticResource DescritivoBloco}">DADOS DO PRODUTO/SERVIÇO</TextBlock>
        <Border BorderThickness="1"
                BorderBrush="Black"
                CornerRadius="2">
            <ListView SelectionMode="None">
                <ListView.Header>
                    <Grid>
                        <Grid.Resources>
                            <Style TargetType="TextBlock"
                                   BasedOn="{StaticResource Cabecalho}">
                                <Setter Property="TextAlignment"
                                        Value="Center" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{x:Bind Coluna0}" />
                            <ColumnDefinition Width="{x:Bind Coluna1}" />
                            <ColumnDefinition Width="{x:Bind Coluna2}" />
                            <ColumnDefinition Width="{x:Bind ColunaGeral3}" />
                            <ColumnDefinition Width="{x:Bind ColunaGeral4}" />
                            <ColumnDefinition Width="{x:Bind ColunaGeral5}" />
                            <ColumnDefinition Width="{x:Bind ColunaGeral6}" />
                        </Grid.ColumnDefinitions>
                        <Border BorderThickness="0,0,1,0"
                                BorderBrush="Black">
                            <TextBlock>CÓDIGO</TextBlock>
                        </Border>
                        <TextBlock Grid.Column="1">DESCRIÇÃO DO PRODUTO/SERVIÇO</TextBlock>
                        <Border Grid.Column="2"
                                BorderThickness="1,0,1,0"
                                BorderBrush="Black">
                            <TextBlock>NCM/SH</TextBlock>
                        </Border>
                        <Grid Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock>CST</TextBlock>
                            <Border Grid.Column="1"
                                    BorderThickness="1,0,1,0"
                                    BorderBrush="Black">
                                <TextBlock>CFOP</TextBlock>
                            </Border>
                        </Grid>
                        <Grid Grid.Column="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock>UNID.</TextBlock>
                            <Border Grid.Column="1"
                                    BorderThickness="1,0,1,0"
                                    BorderBrush="Black">
                                <TextBlock>QTD.</TextBlock>
                            </Border>
                        </Grid>
                        <Grid Grid.Column="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock>VLR. UNIT.</TextBlock>
                            <Border Grid.Column="1"
                                    BorderThickness="1,0,1,0"
                                    BorderBrush="Black">
                                <TextBlock>VLR. TOTAL</TextBlock>
                            </Border>
                            <TextBlock Grid.Column="2">BC ICMS</TextBlock>
                            <Border Grid.Column="3"
                                    BorderThickness="1,0,1,0"
                                    BorderBrush="Black">
                                <TextBlock>VLR. ICMS</TextBlock>
                            </Border>
                            <TextBlock Grid.Column="4">VLR. IPI</TextBlock>
                        </Grid>
                        <Grid Grid.Column="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Border BorderThickness="1,0,1,0"
                                    BorderBrush="Black">
                                <TextBlock TextWrapping="Wrap">ALÍQ. ICMS</TextBlock>
                            </Border>
                            <TextBlock Grid.Column="1" TextWrapping="Wrap">ALÍQ. IPI</TextBlock>
                        </Grid>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.Resources>
                                <Style TargetType="TextBlock"
                                       BasedOn="{StaticResource Cabecalho}">
                                    <Setter Property="TextAlignment"
                                            Value="Center" />
                                    <Setter Property="VerticalAlignment"
                                            Value="Center" />
                                    <Setter Property="TextWrapping"
                                            Value="Wrap" />
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{Binding Coluna0}" />
                                <ColumnDefinition Width="{Binding Coluna1}" />
                                <ColumnDefinition Width="{Binding Coluna2}" />
                                <ColumnDefinition Width="{Binding ColunaGeral3}" />
                                <ColumnDefinition Width="{Binding ColunaGeral4}" />
                                <ColumnDefinition Width="{Binding ColunaGeral5}" />
                                <ColumnDefinition Width="{Binding ColunaGeral6}" />
                            </Grid.ColumnDefinitions>
                            <Border BorderThickness="0,0,1,0"
                                    BorderBrush="Black">
                                <TextBlock>001</TextBlock>
                            </Border>
                            <TextBlock Grid.Column="1">AREIA LAVADA</TextBlock>
                            <Border Grid.Column="2"
                                    BorderThickness="1,0,1,0"
                                    BorderBrush="Black">
                                <TextBlock>25059000</TextBlock>
                            </Border>
                            <Grid Grid.Column="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock>0400</TextBlock>
                                <Border Grid.Column="1"
                                        BorderThickness="1,0,1,0"
                                        BorderBrush="Black">
                                    <TextBlock>5120</TextBlock>
                                </Border>
                            </Grid>
                            <Grid Grid.Column="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock>MT CUB</TextBlock>
                                <Border Grid.Column="1"
                                        BorderThickness="1,0,1,0"
                                        BorderBrush="Black">
                                    <TextBlock>6,0000</TextBlock>
                                </Border>
                            </Grid>
                            <Grid Grid.Column="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock>15,0000</TextBlock>
                                <Border Grid.Column="1"
                                        BorderThickness="1,0,1,0"
                                        BorderBrush="Black">
                                    <TextBlock>90,00</TextBlock>
                                </Border>
                                <TextBlock Grid.Column="2"></TextBlock>
                                <Border Grid.Column="3"
                                        BorderThickness="1,0,1,0"
                                        BorderBrush="Black">
                                    <TextBlock></TextBlock>
                                </Border>
                                <TextBlock Grid.Column="4"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Border BorderThickness="1,0,1,0"
                                        BorderBrush="Black">
                                    <TextBlock></TextBlock>
                                </Border>
                                <TextBlock Grid.Column="1"></TextBlock>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
    </StackPanel>
</UserControl>
