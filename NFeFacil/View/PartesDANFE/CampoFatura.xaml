<UserControl x:Class="NFeFacil.View.PartesDANFE.CampoFatura"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary Source="EstilosPadrao.xaml" />
    </UserControl.Resources>
    <StackPanel Margin="{Binding Source={StaticResource dimensoes}, Path=MargemBloco}">
        <TextBlock Style="{StaticResource DescritivoBloco}">FATURA</TextBlock>
        <Grid BorderThickness="1"
              BorderBrush="Black"
              CornerRadius="2"
              Padding="{StaticResource PaddingPadrao}">
            <Grid.RowDefinitions>
                <RowDefinition Height="{Binding Source={StaticResource dimensoes}, Path=AlturaLinhaPadrao}" />
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource Conteudo}"
                       Text="{Binding}"
                       VerticalAlignment="Center" />
        </Grid>
    </StackPanel>
</UserControl>
