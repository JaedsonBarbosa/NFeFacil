<UserControl x:Class="NFeFacil.View.PartesDANFE.CampoTransporte"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:NFeFacil.View.PartesDANFE"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary Source="EstilosPadrao.xaml" />
    </UserControl.Resources>
    <StackPanel Margin="{Binding Source={StaticResource dimensoes}, Path=MargemBloco}">
        <TextBlock Style="{StaticResource DescritivoBloco}">TRANSPORTADOR/VOLUMES TRANSPORTADOS</TextBlock>
        <Grid BorderThickness="1"
              BorderBrush="Black"
              CornerRadius="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="{Binding Source={StaticResource dimensoes}, Path=AlturaLinhaPadrao}" />
                <RowDefinition Height="{Binding Source={StaticResource dimensoes}, Path=AlturaLinhaPadrao}" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{x:Bind Coluna00}" />
                    <ColumnDefinition Width="{x:Bind Coluna01}" />
                    <ColumnDefinition Width="{x:Bind Coluna02}" />
                    <ColumnDefinition Width="{x:Bind Coluna03}" />
                    <ColumnDefinition Width="{x:Bind Coluna4}" />
                    <ColumnDefinition Width="{x:Bind Coluna5}" />
                </Grid.ColumnDefinitions>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            BorderThickness="0,0,1,0"
                            BorderBrush="Black">
                    <TextBlock Style="{StaticResource Cabecalho}">RAZÃO SOCIAL</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}">LUIZ ANTONIO GONÇALVES E SILVA</TextBlock>
                </StackPanel>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            Grid.Column="1">
                    <TextBlock Style="{StaticResource Cabecalho}">FRETE POR CONTA</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}">2 - TERCEIROS</TextBlock>
                </StackPanel>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            Grid.Column="2"
                            BorderThickness="1,0,1,0"
                            BorderBrush="Black">
                    <TextBlock Style="{StaticResource Cabecalho}">CÓDIGO ANTT</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}"></TextBlock>
                </StackPanel>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            Grid.Column="3">
                    <TextBlock Style="{StaticResource Cabecalho}">PLACA DO VEÍCULO</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}">BPA1732</TextBlock>
                </StackPanel>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            Grid.Column="4"
                            BorderThickness="1,0,1,0"
                            BorderBrush="Black">
                    <TextBlock Style="{StaticResource Cabecalho}">UF</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}">PB</TextBlock>
                </StackPanel>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            Grid.Column="5">
                    <TextBlock Style="{StaticResource Cabecalho}">CNPJ/CPF</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}">082.069.274-33</TextBlock>
                </StackPanel>
            </Grid>
            <Grid BorderThickness="0,0,0,1"
                  BorderBrush="Black">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{x:Bind Coluna10}" />
                    <ColumnDefinition Width="{x:Bind Coluna11}" />
                    <ColumnDefinition Width="{x:Bind Coluna4}" />
                    <ColumnDefinition Width="{x:Bind Coluna5}" />
                </Grid.ColumnDefinitions>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            BorderThickness="0,0,1,0"
                            BorderBrush="Black">
                    <TextBlock Style="{StaticResource Cabecalho}">ENDEREÇO</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}">RUA ALICE CARNEIRO - 369</TextBlock>
                </StackPanel>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            Grid.Column="1">
                    <TextBlock Style="{StaticResource Cabecalho}">MUNICÍPIO</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}">Alagoinha</TextBlock>
                </StackPanel>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            Grid.Column="2"
                            BorderThickness="1,0,1,0"
                            BorderBrush="Black">
                    <TextBlock Style="{StaticResource Cabecalho}">UF</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}">PB</TextBlock>
                </StackPanel>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            Grid.Column="3">
                    <TextBlock Style="{StaticResource Cabecalho}">INSCRIÇÃO ESTADUAL</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}"></TextBlock>
                </StackPanel>
            </Grid>
            <Grid Width="{Binding Source={StaticResource dimensoes}, Path=LarguraTotal}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            BorderThickness="0,0,1,0"
                            BorderBrush="Black">
                    <TextBlock Style="{StaticResource Cabecalho}">QUANTIDADE</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}"></TextBlock>
                </StackPanel>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            Grid.Column="1">
                    <TextBlock Style="{StaticResource Cabecalho}">ESPÉCIE</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}"></TextBlock>
                </StackPanel>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            Grid.Column="2"
                            BorderThickness="1,0,1,0"
                            BorderBrush="Black">
                    <TextBlock Style="{StaticResource Cabecalho}">MARCA</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}"></TextBlock>
                </StackPanel>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            Grid.Column="3">
                    <TextBlock Style="{StaticResource Cabecalho}">NUMERAÇÃO</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}"></TextBlock>
                </StackPanel>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            Grid.Column="4"
                            BorderThickness="1,0,1,0"
                            BorderBrush="Black">
                    <TextBlock Style="{StaticResource Cabecalho}">PESO BRUTO</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}"></TextBlock>
                </StackPanel>
                <StackPanel Padding="{StaticResource PaddingPadrao}"
                            Grid.Column="5">
                    <TextBlock Style="{StaticResource Cabecalho}">PESO LÍQUIDO</TextBlock>
                    <TextBlock Style="{StaticResource Conteudo}"></TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </StackPanel>
</UserControl>
