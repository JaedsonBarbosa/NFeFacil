<UserControl
    x:Class="NFeFacil.View.PartesDANFE.Canhoto"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NFeFacil.View.PartesDANFE"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="60"
    d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <local:DimensoesPadrao x:Key="dimensoes" />
            <Style TargetType="Border">
                <Setter Property="BorderBrush"
                        Value="Black" />
                <Setter Property="Padding"
                        Value="6,1,1,1" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{x:Bind Coluna0}" />
            <ColumnDefinition Width="{x:Bind Coluna1}" />
            <ColumnDefinition Width="{x:Bind Coluna2}" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding Source={StaticResource dimensoes}, Path=AlturaLinhaPadrao}" />
            <RowDefinition Height="{Binding Source={StaticResource dimensoes}, Path=AlturaLinhaPadrao}" />
        </Grid.RowDefinitions>
        <Border Grid.ColumnSpan="2"
                BorderThickness="1">
            <TextBlock FontSize="6">RECEBEMOS DE SEVERINO ALVES SERAFIM ME OS PRODUTOS/SERVIÇOS CONSTANTES DA NOTA FISCAL INDICADA AO LADO</TextBlock>
        </Border>
        <Border Grid.Row="1"
                BorderThickness="1,0,1,1">
            <TextBlock FontSize="6">DATA DE RECEBIMENTO</TextBlock>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="1"
                BorderThickness="0,0,1,1">
            <TextBlock FontSize="6">IDENTIFICAÇÃO E ASSINATURA DO RECEBEDOR</TextBlock>
        </Border>
        <Border Grid.Column="2"
                Grid.RowSpan="2"
                BorderThickness="0,1,1,1">
            <StackPanel>
                <TextBlock FontSize="9"
                           TextAlignment="Center"
                           FontWeight="Bold">NF-e</TextBlock>
                <TextBlock FontSize="12"
                           Margin="0,4,0,8">Nº 000.000.275</TextBlock>
                <TextBlock FontSize="12">Série: 1</TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
