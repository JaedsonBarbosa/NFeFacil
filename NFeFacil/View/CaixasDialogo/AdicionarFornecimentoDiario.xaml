<ContentDialog x:Class="NFeFacil.View.CaixasDialogo.AdicionarFornecimentoDiario"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:detalhes="using:NFeFacil.ModeloXML.PartesProcesso.PartesNFe.PartesDetalhes"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               Title="Adicionar fornecimento diário"
               PrimaryButtonText="Adicionar"
               SecondaryButtonText="Cancelar">
    <ContentDialog.DataContext>
        <detalhes:FornecimentoDiario />
    </ContentDialog.DataContext>
    <StackPanel>
        <TextBox Text="{Binding dia, Mode=TwoWay}"
                 Header="Dia" />
        <TextBox Text="{Binding qtde, Mode=TwoWay}"
                 Header="Quantidade" />
    </StackPanel>
</ContentDialog>
