<ContentDialog x:Class="NFeFacil.View.CaixasDialogo.RegistroVenda.CalculoDesconto"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:controles="using:NFeFacil.View.Controles"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               Title="Calcular desconto"
               PrimaryButtonText="Aplicar"
               SecondaryButtonText="Cancelar">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <controles:EntradaNumerica Format="2:2"
                                   Header="Desconto %"
                                   Number="{x:Bind Porcentagem, Mode=TwoWay}" />
        <controles:EntradaNumerica Format="13:2"
                                   Header="Valor desejado"
                                   Number="{x:Bind ValorDesejado, Mode=TwoWay}" />
    </Grid>
</ContentDialog>
