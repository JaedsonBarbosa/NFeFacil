<UserControl x:Class="NFeFacil.Controles.ExibicaoImagem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             MinWidth="264"
             d:DesignWidth="400">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border BorderBrush="{StaticResource Normal}"
                BorderThickness="4"
                CornerRadius="128"
                Width="256"
                Height="256"
                Margin="4">
            <Image x:Name="imagem"
                   Stretch="UniformToFill" />
        </Border>
        <TextBlock x:Name="principal" Grid.Row="1"
                   Style="{StaticResource BodyTextBlockStyle}"
                   MaxWidth="256"
                   TextAlignment="Center"
                   FontWeight="Bold"
                   FontSize="18" />
        <TextBlock x:Name="secundario" Grid.Row="2"
                   Style="{StaticResource BodyTextBlockStyle}"
                   MaxWidth="256"
                   TextAlignment="Center" />
    </Grid>
</UserControl>
