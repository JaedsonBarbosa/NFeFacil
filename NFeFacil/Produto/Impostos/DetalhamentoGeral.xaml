<Page x:Class="NFeFacil.Produto.Impostos.DetalhamentoGeral"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtTitulo"
                   Style="{StaticResource TitleTextBlockStyle}" />
        <Frame x:Name="frmImposto"
               Grid.Row="1"
               Navigated="ImpostoTrocado" />
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Label="Voltar"
                          Icon="Back"
                          Click="Voltar" />
            <AppBarButton Label="Avançar"
                          Icon="Forward"
                          Click="Avancar" />
        </CommandBar>
    </Page.BottomAppBar>
</Page>
