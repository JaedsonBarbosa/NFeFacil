<Window x:Class="ServidorCertificacao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Servidor de certificação">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0">Número de clientes conectados: <Run x:Name="txtNumClientes" /></TextBlock>
        <TextBlock Grid.Row="1">IP do servidor: <Run x:Name="txtIP" /></TextBlock>
        <TextBlock Grid.Row="2"
                   Margin="0,16,0,0">Métodos solicitados</TextBlock>
        <ListView Grid.Row="3"
                  x:Name="lstMetodos" />
    </Grid>
</Window>
