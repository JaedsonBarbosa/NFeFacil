<Page x:Class="Fiscal.Certificacao.ConfiguracoesServidorCertificacao"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:my="using:BaseGeral.Controles"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <ItemsControl Style="{StaticResource ItensSimples}"
                  Margin="16">
        <my:ItemPadrao Titulo="Instalar servidor"
                       Descricao="Instale o programa de certificação em alguma pasta."
                       Click="InstalarServidor">
            <FontIcon Glyph="&#xEC4E;" />
        </my:ItemPadrao>
        <my:ItemPadrao Titulo="Iniciar automat."
                       Descricao="Registrar o servidor para iniciar automaticamente."
                       Click="RegistrarInicioAutomatico">
            <SymbolIcon Symbol="Add" />
        </my:ItemPadrao>
        <my:ItemPadrao Titulo="Liberar conexão"
                       Descricao="Usando o gerenciador de loopback do Windows"
                       Click="RepararProblemas">
            <SymbolIcon Symbol="Repair" />
        </my:ItemPadrao>
    </ItemsControl>
</Page>
